{%- liquid
  assign variant = section.settings.variant
  assign container = section.settings.container
  assign py = section.settings.py
  assign bg = section.settings.bg
  assign text = section.settings.text
  assign align = section.settings.align
  assign pad_x = ''
  assign classes = ''

  assign width_class = ''
  case variant
    when 'narrow'
      assign width_class = 'max-w-2xl'
    when 'wide'
      assign width_class = 'max-w-4xl'
    else
      assign width_class = 'max-w-3xl'
  endcase

  assign text_align = ''
  case align
    when 'center'
      assign text_align = 'text-center items-center'
    when 'right'
      assign text_align = 'text-right items-end'
    else
      assign text_align = 'text-left items-start'
  endcase
-%}

<section class="{{ bg }} {{ text }} {{ py }}">
  {% capture inner %}
    <div class="flex flex-col {{ text_align }} {{ width_class }}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'kicker' -%}
            {% render 'cc-heading', tag: 'p', text: block.settings.text, classes: 'text-sm font-medium opacity-80', align: align, shopify_attributes: block.shopify_attributes %}
          {%- when 'heading' -%}
            {% render 'cc-heading', tag: 'h2', text: block.settings.text, classes: 'mt-3', align: align, shopify_attributes: block.shopify_attributes %}
          {%- when 'text' -%}
            {% render 'cc-heading', tag: 'p', text: block.settings.text, classes: 'mt-4 text-base sm:text-lg opacity-90', align: align, shopify_attributes: block.shopify_attributes %}
          {%- when 'button' -%}
            {%- if block.settings.label != blank and block.settings.link != blank -%}
              {%- liquid
                assign btn_wrap = 'mt-6'
                if align == 'center'
                  assign btn_wrap = btn_wrap | append: ' text-center'
                elsif align == 'right'
                  assign btn_wrap = btn_wrap | append: ' text-right'
                endif
              -%}
              <div {{ block.shopify_attributes }} class="{{ btn_wrap }}">
                {% render 'cc-button', label: block.settings.label, href: block.settings.link, variant: 'primary' %}
              </div>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
  {% endcapture %}

  {% render 'cc-container', size: container, pad_x: pad_x, classes: classes, content: inner %}
</section>

{% schema %}
{
  "name": "CC — Rich Text",
  "tag": "section",
  "class": "cc-rich-text",
  "settings": [
    {
      "type": "select",
      "id": "variant",
      "label": "Layout variant",
      "default": "narrow",
      "options": [
        { "value": "narrow", "label": "Narrow" },
        { "value": "wide", "label": "Wide" }
      ]
    },
    {
      "type": "select",
      "id": "container",
      "label": "Container width",
      "default": "xl",
      "options": [
        { "value": "sm", "label": "Small" },
        { "value": "md", "label": "Medium" },
        { "value": "lg", "label": "Large" },
        { "value": "xl", "label": "Extra large" }
      ]
    },
    {
      "type": "select",
      "id": "align",
      "label": "Text alignment",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "select",
      "id": "py",
      "label": "Vertical spacing",
      "default": "py-14 sm:py-20 lg:py-24",
      "options": [
        { "value": "py-10 sm:py-14", "label": "Compact" },
        { "value": "py-14 sm:py-20 lg:py-24", "label": "Comfort" },
        { "value": "py-20 sm:py-28 lg:py-32", "label": "Spacious" }
      ]
    },
    {
      "type": "select",
      "id": "bg",
      "label": "Background",
      "default": "bg-white",
      "options": [
        { "value": "bg-white", "label": "White" },
        { "value": "bg-neutral-50", "label": "Soft light" },
        { "value": "bg-neutral-950", "label": "Dark" }
      ]
    },
    {
      "type": "select",
      "id": "text",
      "label": "Text color",
      "default": "text-neutral-900",
      "options": [
        { "value": "text-neutral-900", "label": "Dark text" },
        { "value": "text-neutral-800", "label": "Muted dark" },
        { "value": "text-white", "label": "White text" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "kicker",
      "name": "Kicker",
      "limit": 1,
      "settings": [{ "type": "text", "id": "text", "label": "Text", "default": "Rich text" }]
    },
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [{ "type": "text", "id": "text", "label": "Heading", "default": "Tell your brand story" }]
    },
    {
      "type": "text",
      "name": "Text",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Use this section for longer-form messaging, notes, or editorial content.</p>"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "label", "label": "Label", "default": "Learn more" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "presets": [
    {
      "name": "CC Rich Text — Narrow",
      "settings": { "variant": "narrow", "align": "left", "bg": "bg-white", "text": "text-neutral-900" },
      "blocks": [{ "type": "kicker" }, { "type": "heading" }, { "type": "text" }, { "type": "button" }]
    },
    {
      "name": "CC Rich Text — Wide",
      "settings": { "variant": "wide", "align": "center", "bg": "bg-neutral-50", "text": "text-neutral-900" },
      "blocks": [{ "type": "kicker" }, { "type": "heading" }, { "type": "text" }, { "type": "button" }]
    },
    {
      "name": "CC Rich Text — Dark",
      "settings": { "variant": "narrow", "align": "center", "bg": "bg-neutral-950", "text": "text-white" },
      "blocks": [{ "type": "kicker" }, { "type": "heading" }, { "type": "text" }]
    }
  ]
}
{% endschema %}
