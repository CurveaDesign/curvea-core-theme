    },
    {
      "name": "Minimal",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" }
      ]
    },
    {
      "name": "Editorial",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}
