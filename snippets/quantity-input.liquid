{% comment %}
  Quantity input

  Accepts:
  - variant: {Object} Variant object
  - variant_id: {String} Variant ID (optional)
  - min: {Number} Min (optional)

  Usage:
  {% render 'quantity-input' variant: variant %}
{% endcomment %}

{%- liquid
  # UX: ensure this snippet is safe when variant_id/min arenâ€™t provided.
  # In cart contexts we want a stable input name and a non-negative floor.
  assign cc_variant_id = variant_id
  if cc_variant_id == blank
    assign cc_variant_id = variant.id
  endif

  assign cc_min_attr = min
  if cc_min_attr == blank
    assign cc_min_attr = 0
  endif

  assign cc_cart_qty = cart | item_count_for_variant: variant.id
  assign cc_at_min = false
  if cc_cart_qty <= cc_min_attr
    assign cc_at_min = true
  endif

  assign cc_at_max = false
  if variant.quantity_rule.max != null and cc_cart_qty >= variant.quantity_rule.max
    assign cc_at_max = true
  endif
-%}

<quantity-input class="quantity cart-quantity" data-variant-id="{{ variant.id }}">
  <button
    class="quantity__button"
    name="minus"
    type="button"
    data-target="decrement-{{ variant.id }}"
    aria-controls="Quantity-{{ variant.id }}"
    {% if cc_at_min %}
      disabled
      aria-disabled="true"
    {% endif %}
  >
    <span class="visually-hidden">
      {{- 'products.product.quantity.decrease' | t: product: variant.title | escape -}}
    </span>
    <span class="svg-wrapper" aria-hidden="true">{{ 'icon-minus.svg' | inline_asset_content }}</span>
  </button>

  <input
    class="quantity__input"
    data-quantity-variant-id="{{ variant.id }}"
    type="number"
    inputmode="numeric"
    name="updates[{{ cc_variant_id }}]"
    {%- comment -%} theme-check-disable {%- endcomment -%}
    value="{{ cc_cart_qty }}"
    data-cart-quantity="{{ cc_cart_qty }}"
    min="{{ cc_min_attr }}"
    data-min="{{ variant.quantity_rule.min }}"
    {% if variant.quantity_rule.max != null %}
      max="{{ variant.quantity_rule.max }}"
      data-max="{{ variant.quantity_rule.max }}"
    {% endif %}
    step="{{ variant.quantity_rule.increment }}"
    {%- comment -%} theme-check-enable {%- endcomment -%}
    aria-label="{{ 'products.product.quantity.input_label' | t: product: variant.title | escape }}"
    id="Quantity-{{ variant.id }}"
    data-index="{{ variant.id }}"
    data-target="quantity-input-{{ variant.id }}"
  >

  <button
    class="quantity__button"
    name="plus"
    type="button"
    data-target="increment-{{ variant.id }}"
    aria-controls="Quantity-{{ variant.id }}"
    {% if cc_at_max %}
      disabled
      aria-disabled="true"
    {% endif %}
  >
    <span class="visually-hidden">
      {{- 'products.product.quantity.increase' | t: product: variant.title | escape -}}
    </span>
    <span class="svg-wrapper" aria-hidden="true">{{ 'icon-plus.svg' | inline_asset_content }}</span>
  </button>

  {%- render 'progress-bar' -%}
</quantity-input>
